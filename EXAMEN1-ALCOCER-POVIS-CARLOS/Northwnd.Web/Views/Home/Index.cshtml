
@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <!--
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">Home</a>
                </li>-->
            <li class="active">Registro de Pedidos</li>
        </ul><!-- /.breadcrumb -->
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-sm-12">
                <form id="FrmCalculadora" method="post" autocomplete="off" role="form" data-toggle="validator">
                    <div class="row">
                        <div class="col-sm-12 input">
                            <div id="dataTables_wrapper" class="dataTables_wrapper form-inline no-footer">
                                <div class="dt-toolbar"></div>
                                <div class="table-responsive" style="padding-left:10px;padding-right:10px;">
                                    <table id="TOrders" class="table table-striped table-bordered no-footer" style="width:100%;font-size:12px;" role="grid" aria-describedby="dataTables_info">
                                        <thead>
                                            <tr>
                                                <th width="1%" style="font-size:10px;">N° Orden</th>
                                                <th width="3%" style="font-size:10px;">Fecha</th>
                                                <th width="20%" style="font-size:10px;">Nombre / Razon Social</th>
                                                <th width="3%" style="font-size:10px;">Telefono</th>
                                                <th width="1%" style="font-size:10px;">Detalle</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                if (ViewBag.Orders != null) {
                                                    if (ViewBag.Orders.Count > 0) {

                                                        foreach (var item in ViewBag.Orders)
                                                        {
                                                        <tr>
                                                            <td style="text-align:center">@item.OrderID</td>
                                                            <td style="text-align:center"> @item.OrderDate</td>
                                                            <td>@item.CompanyName</td>
                                                            <td>@item.Phone</td>
                                                            <td style="text-align:center"><a href="/Home/OrdersDetailt/@item.OrderID"  class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a></td>
                                                        </tr>
                                                        }
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                 
                </form>
            </div>
        </div>
    </div><!-- /.page-content -->
</div>



